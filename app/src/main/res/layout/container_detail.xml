<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/containerName_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="14dp"
        android:text="ContainerName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/description_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/containerName_TextView"
        android:layout_alignLeft="@id/containerName_TextView"
        android:layout_marginTop="10dp"
        android:text="ContainerDescription"
        android:textSize="16sp"
        android:paddingBottom="15dp"/>

    <ImageView
        android:id="@+id/box_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/box_icon"
        android:layout_alignTop="@+id/containerName_TextView"
        android:translationY="10dp"
        android:layout_marginStart="30dp"></ImageView>
</RelativeLayout>